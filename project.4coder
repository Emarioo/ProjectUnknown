version(2);
project_name = "game.exe";
patterns = {
"*.c",
"*.cpp",
"*.h",
"*.m",
"*.bat",
"*.sh",
"*.4coder",
};
blacklist_patterns = {
".*",
};
load_paths_base = {
	{ ".", .relative = true, .recursive = false, },
	{ "./ProjectUnknown", .relative = true, .recursive = true, },
	{ "./Engone", .relative = true, .recursive = true, },
};
load_paths = {
 .win = load_paths_base,
 .linux = load_paths_base,
 .mac = load_paths_base,
};

commands = {
 .build = { .out = "*compilation*", .footer_panel = true, .save_dirty_files = true,
   .win = "build.bat",
   .linux = "./build.sh",
   .mac = "./build.sh", },
 .run = { .out = "*run*", .footer_panel = false, .save_dirty_files = false,
   .win = "bin\\game.exe",
   .linux = "bin/game.exe",
   .mac = "bin/game.exe", },
};
fkey_command = {
.F1 = "build",
.F2 = "run",
};
